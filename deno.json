{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": {
      "command": "vite",
      "dependencies": ["gen:icons", "gen"]
    },
    "build": {
      "command": "vite build",
      "dependencies": ["gen:icons", "gen"]
    },
    "gen": "deno run -A scripts/gen_content.ts",
    "gen:icons": "deno run -A scripts/generate_icons.ts",
    "start": "deno task gen && deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "fmt": {
    "exclude": ["./static"]
  },
  "exclude": ["**/_fresh/*"],
  "imports": {
    "@/": "./",
    "@phosphor-icons/core": "npm:@phosphor-icons/core@^2.1.1",
    "@phosphor-icons/react": "npm:@phosphor-icons/react@^2.1.10",
    "@phosphor-icons/react/": "npm:@phosphor-icons/react@^2.1.10/",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@types/prismjs": "npm:@types/prismjs@^1.26.5",
    "date-fns": "npm:date-fns@^4.1.0",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "marked": "npm:marked@^15.0.12",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.8",
    "prismjs": "npm:prismjs@^1.30.0",
    "react-markdown": "npm:react-markdown@^10.1.0",
    "rehype-highlight": "npm:rehype-highlight@^7.0.2",
    "remark-gfm": "npm:remark-gfm@^4.0.1",
    "swr": "npm:swr@^2.3.7",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12"
  },
  "compilerOptions": {
    "lib": ["dom", "dom.asynciterable", "dom.iterable", "deno.ns"],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": ["vite/client"]
  }
}
